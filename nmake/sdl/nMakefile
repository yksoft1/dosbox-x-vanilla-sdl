.SUFFIXES: .c.o
.SUFFIXES: .cpp.o

all: $(TARGET) $(SDLMAIN)

$(TARGET):	$(OBJS)
	$(LIBR) $(LFLAGS) -OUT:$@ $(OBJS) 

$(SDLMAIN):	src\main\win32\SDL_win32_main.obj
	$(LIBR) $(LFLAGS) -OUT:$@ src\main\win32\SDL_win32_main.obj
	
.c.obj:
	$(CC) $(CFLAGS) -c -Fo$@ $<

.cpp.obj:
	$(CXX) $(CXXFLAGS) -c -Fo$@ $<

.rc.res: 
	$(WINDRES) -fo $@ $< 
	
clean:
	del $(TARGET) $(SDLMAIN) $(OBJS) src\main\win32\SDL_win32_main.obj
